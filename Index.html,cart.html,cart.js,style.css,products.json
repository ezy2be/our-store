<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Cart - Our Store</title>
<link rel="stylesheet" href="style.css">
</head>
<body>
<header>
  <h1>Your Cart</h1>
  <nav>
    <a href="index.html">Home</a>
  </nav>
</header>

<main>
  <div id="cartItems"></div>

  <h2>Checkout</h2>
  <p>Pay directly to our Westpac account:</p>
  <ul>
    <li><strong>Account Name:</strong> Elliot Hiroki</li>
    <li><strong>Bank:</strong> Westpac NZ</li>
    <li><strong>Account Number:</strong> 03-0543-0300480-000</li>
    <li><strong>Reference:</strong> Your name or order ID</li>
  </ul>
  <p>After payment, email your confirmation and shipping address to <strong>Emhiro1968@gmail.com</strong>.</p>

  <button onclick="clearCart(); displayCart();">Clear Cart</button>
</main>

<footer>
  <p>Contact: Emhiro1968@gmail.com</p>
</footer>

<script src="cart.js"></script>
<script>
function displayCart() {
  const cartItems = getCart();
  const container = document.getElementById('cartItems');
  container.innerHTML = '';
  if(cartItems.length === 0) {
    container.innerHTML = '<p>Your cart is empty.</p>';
    return;
  }
  cartItems.forEach(item => {
    const div = document.createElement('div');
    div.classList.add('product');
    div.innerHTML = `
      <h3>${item.name}</h3>
      <p>${item.description}</p>
      <p>Price: $${item.price}</p>
    `;
    container.appendChild(div);
  });
}
displayCart();
</script>
</body>
</html>


























